@model STIWithSTKParameterDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="STI" asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="CommodityCode" class="col-sm-4 form-label">Mal Kodu</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="CommodityCode" placeholder="Mal Kodu" />
            <span asp-validation-for="CommodityCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="StartDate" class="col-sm-4 form-label">Başlangıç Tarihi</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="StartDate" placeholder="Başlangıç Tarihi" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="EndDate" class="col-sm-4 form-label">Bitiş Tarihi</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" asp-for="EndDate" placeholder="Bitiş Tarihi" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-3 d-grid gap-2 col-4 mx-auto">
        <button type="submit" class="btn btn-primary">Listele</button>
    </div>
</form>